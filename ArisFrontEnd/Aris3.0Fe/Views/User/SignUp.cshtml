@model Account
@Html.AntiForgeryToken()
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Netflix - Sign In</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #e50914;
            --background-color: #141414;
            --text-color: #fff;
            --input-background: #333;
            --input-border: #444;
            --input-placeholder: #8c8c8c;
            --button-background: #e50914;
            --link-color: #0073e6;
            --button-primary: #0073e6;
        }

        body {
            margin: 0;
            padding: 0;
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background: #000;
            color: #fff;
            overflow-x: hidden;
        }

        .background-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
            z-index: 1;
        }

        .movie-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('https://analyticsindiamag.com/wp-content/uploads/2019/05/apps.55787.9007199266246365.687a10a8-4c4a-4a47-8ec5-a95f70d8852d.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            z-index: 0;
            opacity: 1;
        }

        .netflix-logo {
            font-family: 'Bebas Neue', Impact, Arial Black, sans-serif;
            font-size: 3rem;
            font-weight: 900;
            color: #e50914;
            letter-spacing: 0.05em;
            transform: scaleY(1.05);
            text-decoration: none;
        }


        .main-container {
            position: relative;
            z-index: 10;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .Information-for-pricing {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        .form-control {
            background: #333;
            border: none;
            color: #fff;
            padding: 1rem;
            border-radius: 4px;
            margin-bottom: 1rem;
        }

            .form-control:focus {
                background: #454545;
                border-color: #fff;
                box-shadow: none;
                color: #fff;
            }

            .form-control::placeholder {
                color: #8c8c8c;
            }

        .btn-netflix {
            background: #e50914;
            border: none;
            color: #fff;
            padding: 1rem;
            border-radius: 4px;
            font-weight: bold;
            width: 100%;
            margin-bottom: 1rem;
        }

        .btn-code {
            background: #333;
            border: none;
            color: #fff;
            padding: 1rem;
            border-radius: 4px;
            width: 100%;
            margin-bottom: 1rem;
        }

        .divider {
            text-align: center;
            margin: 1rem 0;
            color: #737373;
        }

        .footer {
            text-align: center;
            padding: 2rem;
            position: relative;
            z-index: 10;
        }

            .footer a {
                color: #737373;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        .sign-in-button {
            background-color: #e3271d;
            color: white;
            font-weight: bold;
            width: 5.5rem;
            transition: background-color 0.3s ease;
        }

            .sign-in-button:hover {
                background-color: #b81d18;
                color: white;
            }

        .language-select {
            position: relative;
            display: inline-flex;
            align-items: center;
            background-color: #000;
            border: 1px solid #555;
            border-radius: 4px;
            padding: 0.25rem 0.5rem;
            color: white;
            height: auto;
            min-width: 180px;
            font-size: 0.9rem;
        }

            .language-select i {
                margin-right: 0.5rem;
                font-size: 1rem;
            }

            .language-select select {
                background: black;
                border: none;
                color: white;
                padding-right: 1.5rem;
                /* room for dropdown arrow */
                appearance: none;
                /* remove default styles */
            }

            .language-select::after {
                content: "▼";
                font-size: 0.6rem;
                position: absolute;
                right: 0.5rem;
                pointer-events: none;
            }

        .register-section {
            position: relative;
            width: 500px;
            max-width: 550px;
        }

            .register-section input {
                height: 3.75rem;
                width: 100%;
                padding: 1rem;
                background: rgba(0, 0, 0, 0.6);
                border: 1px solid #555;
                border-radius: 4px;
                font-size: 1rem;
                color: #fff;
                outline: none;
            }

                .register-section input:focus {
                    border-color: #fff;
                    background-color: rgba(0, 0, 0, 0.8);
                }

            .register-section .email-holder {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: #8c8c8c;
                font-size: 1rem;
                pointer-events: none;
                transition: all 0.2s ease;
            }

            /* On focus or when input has text */
            .register-section input:focus + .email-holder,
            .register-section input:not(:placeholder-shown) + .email-holder {
                top: 0.75rem;
                font-size: 0.75rem;
                color: #e5e5e5;
            }

        @@media (max-width: 768px) {
            .sign-in-form {
                padding: 2rem 1.5rem;
                margin: 1rem;
            }

            .netflix-logo {
                font-size: 2rem;
            }
        }
    </style>
</head>

<body>
    <!-- Background Image -->
    <div class="movie-background"></div>
    <!-- Overlay -->
    <div class="background-overlay"></div>


    <!-- Main Container -->
    <div class="main-container">
        <!-- Header -->
        <header class="container container-fluid py-2 d-flex justify-content-between align-items-center">
            <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                <div class="netflix-logo">Aris</div>
            </a>
            <div class="login-site-container">
                <div class="language-select me-2">
                    <i class="bi bi-globe"></i>
                    <select class="form-select">
                        <option selected>English</option>
                        <option value="vi">Tiếng Việt</option>
                    </select>
                </div>
                <div class="btn sign-in-button">Sign in</div>
            </div>
        </header>


        <!-- Sign In Form -->
        <div class="Information-for-pricing">
            <div class="Information-site d-flex flex-column gap-3 align-items-center">
                <label style="font-size:4.5em;font-weight:bolder;font-family:sans-serif">
                    Unlimited films, <br />
                    series and more
                </label>
                <h5 style="font-weight:bolder">Starts at 74,000 ₫. Cancel at any time.</h5>
                <h5>Ready to watch? Enter your email to create or restart your membership.</h5>
                <form action="PickPlan" method="get">
                    <div class="d-flex gap-2 align-items-center">
                        <!-- Email input -->
                        <div class="register-section">
                            <input type="email" name="email" placeholder=" " autocomplete="off" required />
                            <span class="email-holder">Email address</span>
                        </div>
                        <button type="submit"
                                class="btn btn-danger d-flex align-items-center"
                                style="background-color: red;
                   height: 50px;
                   font-weight: 700;
                   font-size: 1.5rem;
                   padding: 1.75rem 2rem 1.75rem 1.5rem;
                   max-width: 300px;">
                            <span>Get started</span>
                            <i class="bi bi-chevron-right" style="margin-left: 0.5rem;"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Footer -->
        <footer class="footer">
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>