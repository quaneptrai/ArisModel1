@{
    Layout = null;
}
<!DOCTYPE html>
    <html>
    <head>
        <title>Pick your plan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            overflow: hidden; /* chặn scroll */
        }
        .netflix-logo {
            font-family: 'Bebas Neue', Impact, Arial Black, sans-serif;
            font-size: 4rem;
            font-weight: 900;
            color: #e50914;
            letter-spacing: 0.05em;
            transform: scaleY(1.05);
            text-decoration: none;
        }
        #header{
            padding-top:10px;
            border-bottom: 1px solid black;
            border-top: 1px solid black;
        }
        #main-container{
            position:relative;
            padding-bottom:6rem;
        }
        .first-part{
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            transform: translateX(-100px);
            justify-content: center;
            justify-content: flex-start;
        }

        .first-part-content{
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
            padding: 5rem 1rem;
            font-weight: bolder;
        }

        .register-section {
            position: relative;
            width: 500px;
            max-width: 550px;
        }

            .register-section input {
                height: 3.75rem;
                width: 100%;
                padding: 1rem;
                background: white;
                border: 1px solid #555;
                border-radius: 4px;
                font-size: 1rem;
                color: black;
                outline: none;
            }

                .register-section input:focus {
                    border-color: black;
                    color:black;
                    background-color: white;
                }

            .register-section .password-holder {
                position: absolute;
                left: 1rem;
                top: 50%;
                transform: translateY(-50%);
                color: black;
                font-size: 1rem;
                pointer-events: none;
                transition: all 0.2s ease;
            }

            /* On focus or when input has text */
            .register-section input:focus + .password-holder,
            .register-section input:not(:placeholder-shown) + .password-holder {
                top: 0.75rem;
                font-size: 0.75rem;
                color: black;
            }

        .next-button{
            width:100%;
            background-color:red;
            color:white;
            height:100%;
            font-size:2rem;
        }
        #footer{
            padding-top:80px;
            background-color: rgba(242,242,242,255);
            height:100%;
            font-size:1.25rem;
        }

            #footer p {
                margin: 0 0 0.5rem 0; /* chỉ giữ khoảng cách nhỏ dưới p */
                font-size: 1.25rem;
            }

            #footer span {
                display: block; /* xuống dòng như bạn đã làm */
                margin-bottom: 0.5rem; /* thêm khoảng cách giữa các span */
                font-size: 1rem;
                text-decoration: underline;
                cursor: pointer;
            }

        .next-button:hover{
            background-color: #b81d18;
            color: white;
        }

        .next-button a {
            color: inherit; /* take button text color */
            text-decoration: none; /* remove underline */
            display: block; /* optional: make it fill the button */
            width: 100%;
            height: 100%;
        }
    </style>
    </head>
    <body>
    <section id="header">
        <div class="container container-fluid">
            <div class="header-container d-flex justify-content-between align-items-center">
                <a asp-action="SignUp" style="text-decoration:none">
                <h1 class="netflix-logo">Aris</h1>
                </a>
                <h5 style="font-size:18px">Sign in</h5>
            </div>
        </div>
    </section>
    <section id="main-content">
    <div class="first-part">
        <div class="first-part-content">
                <h5><span style="font-weight:450">Step</span> 1 <span style="font-weight:450">of</span> 3</h5>
                <h1>
                    Welcome back!</br>
                    Joining Netflix is easy.
                </h1>
                <h5 style="font-weight:500">Enter your password, and you'll be watching in no time.</h5>
                <p style="font-size:1rem;font-weight:400;">password address</p>
                <h5 style="font-weight:bold">@TempData["Email"]</h5>
                <div class="register-section">
                    <input type="password" name="password" placeholder=" " autocomplete="off" required />
                    <span class="password-holder">Password</span>
                </div>
                <a style="font-family:Arial;padding-top:30px;padding-bottom:30px" asp-action="ForgotPassword">Forgot your password ?</a>
                <div class="btn next-button">
                    <a style="text-decoration:none;" asp-action="Step2">Next</a>
                </div>
        </div>
    </div>
    </section>
    <section id="footer" class="min-vh-100">
        <div class="container container-fluid">
            <div class="d-grid">
                <div class="row">
                    <div class="col-3">
                        <p style="font-size:1.25rem">Questions? Contact us.</p>
                        <span style="text-decoration:underline;font-size:1rem;display:block;cursor:pointer">FAQ</span>
                        <span style="text-decoration:underline;font-size:1rem;display:block;cursor:pointer">Cookie Preferences</span>
                    </div>
                    <div class="col-3">
                        <p style="font-size:1.25rem"></p>
                        <span style="text-decoration:underline;font-size:1rem;display:block;cursor:pointer">
                            Help Centre
                        </span>
                        <span style="text-decoration:underline;font-size:1rem;display:block;cursor:pointer">
                            Corporate Information
                        </span>
                    </div>
                    <div class="col-3">
                        <p style="font-size:1.25rem"></p>
                        <span style="text-decoration:underline;font-size:1rem;display:block;cursor:pointer">
                            Term of use
                        </span>                       
                    </div>
                    <div class="col-3">
                        <p style="font-size:1.25rem"></p>
                        <span style="text-decoration:underline;font-size:1rem;display:block;cursor:pointer">
                            Privacy
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </body>
    </html>