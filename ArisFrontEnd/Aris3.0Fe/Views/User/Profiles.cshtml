@model Account;
@{
    Layout = null;
    var latestHistory = Model.SubscriptionHistories
                             .OrderByDescending(sh => sh.EndDate)
                             .FirstOrDefault();
    string paymentLogo = latestHistory?.SubscriptionMethod switch
    {
        "MoMo" => "/Asset/MOMO-Logo-App.png",
        "CreditCard" => "/Asset/credit-card.png",
        "PayPal" => "/Asset/paypal.png",
        _ => "/Asset/default-payment.png"
    };
 }
<!DOCTYPE html>
<html>
<head>
    <title>Pick your plan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }

        .netflix-logo {
            font-family: 'Bebas Neue', Impact, Arial Black, sans-serif;
            font-size: 3rem;
            font-weight: 900;
            color: #e50914;
            letter-spacing: 0.05em;
            transform: scaleY(1.05);
            text-decoration: none;
        }

        #header {
            padding-top: 5px;
            border-bottom: 1px solid rgba(0,0,0,0.2);
        }

        #main-container {
            position: relative;
            padding-bottom: 6rem;
        }
        #main-content{
            flex: 1; /* takes all remaining space */
            background-color: rgba(242,242,242,1);
            display: flex; /* if you want content inside to align */
            align-items: center; /* vertical centering */
            justify-content: center;
            position: relative;
        }
        .second-part {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            transform: translateX(-100px);
            justify-content: center;
            justify-content: flex-start;
        }

        .second-part-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: flex-start;
            padding: 5rem 1rem;
            font-weight: bolder;
        }

            .second-part-content i {
                font-size: 4rem;
                color: red;
            }

            .second-part-content ul {
                list-style: none; /* remove default bullets */
                padding-left: 0; /* reset padding */
            }

            .second-part-content li {
                font-size: 1.25rem;
                margin-bottom: 1rem;
                display: flex; /* align icon + text */
                align-items: center; /* vertical align */
            }

                .second-part-content li i {
                    color: red;
                    font-size: 1.5rem;
                    margin-right: 10px; /* spacing between icon and text */
                }
            /* On focus or when input has text */
            .register-section input:focus + .password-holder,
            .register-section input:not(:placeholder-shown) + .password-holder {
                top: 0.75rem;
                font-size: 0.75rem;
                color: black;
            }

            .right-side-navbar {
                position: absolute;
                justify-content:space-between;
                gap: 50px;
                left:15%;
                top:5%;
                font-weight:600;
                font-size:23px;
                color:gray;
            }

        .Turning-back{
                font-size:22px;
                color: black;
            }

            .Turning-back a{
                text-decoration: none;
                color: black;
            }
        .right-side-navbar i {
                color:black;
                padding-right: 10px;
                font-weight: bolder;
        }

        .right-side-button-group a {
            text-decoration: none;
            color:black;
            }
            .right-side-button-group{
                gap:20px;
            }
            .right-side-button-group a.active {
                color: black; 
             }

            .right-side-navbar active {
                color: black;
            }

        .center-side{
            position:absolute;
            top:4%;
            left:35%;
        }
        .center-side p{
            font-size:18px;
        }
        .center-side h1{
                font-weight: bolder !important;
            font-size: 3rem !important;
        }

        .card {
            position: relative;
            display: flex;
            flex-direction: column;
            height: auto;
            width: auto;
            min-width: 800px;
            border-radius: 8px;
            padding: 3rem 1.5rem 1.5rem 1.5rem; /* increase top padding */
            margin-bottom: 2rem;
        }

        .plan-badge {
            position: absolute;
            top: 10%; 
            left: 0;
            background: linear-gradient(90deg, #5c4dff, #ff0000);
            color: #fff;
            font-weight: bold;
            padding: 0.5rem 1rem;
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
            font-size: 0.8rem;
        }
    </style>
</head>
<body>
    <section id="header">
        <div class="container container-fluid">
            <div class="header-container d-flex justify-content-between align-items-center">
                <a asp-action="SignUp" style="text-decoration:none">
                    <h1 class="netflix-logo">Aris</h1>
                </a>
            </div>
        </div>
    </section>
    <section id="main-content">
       <div class="right-side-navbar d-flex flex-column">
           <div class="Turning-back">
                <a href="https://localhost:7091/"><i class="bi bi-arrow-left"></i> Back to Aris</a>
           </div>
            <div class="right-side-button-group d-flex flex-column">
                <a href="#"><i class="bi bi-house"></i> Overview</a>
                <a href="#"><i class="bi bi-credit-card"></i> Membership</a>
                <a href="#"><i class="bi bi-shield-lock"></i> Security</a>
                <a href="#"><i class="bi bi-phone"></i> Devices</a>
                <a href="#"><i class="bi bi-people"></i> Profiles</a>
            </div>
       </div>
       <div class="center-side d-flex flex-column">
           <h1>Account</h1>
           <p>Membership Details</p>
            <div class="card">
                <div class="d-flex mb-4">
                    <span class="plan-badge">Member since @latestHistory?.StartDate.ToString("MMMM yyyy")</span>
                </div>
                <h4>@Model.Subscription.Name</h4>
                <p>Next payment: <strong>@latestHistory?.EndDate.ToString("dd/MM/yyyy")</strong></p>
                <img style="width:30px;height:30px" src="@Url.Content(paymentLogo)" alt="@latestHistory?.SubscriptionMethod Logo" />
            </div>
       </div>
    </section>
</body>
</html>
<script>
    const navLinks = document.querySelectorAll('.right-side-button-group a');

    navLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            navLinks.forEach(l => {
                l.classList.remove('active');
                l.querySelector('i').className = l.querySelector('i').className.replace('-fill', '');
            });
            this.classList.add('active');
            const icon = this.querySelector('i');
            icon.className += '-fill';
        });
    });
</script>